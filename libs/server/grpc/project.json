{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/server/grpc/src",
  "projectType": "library",
  "targets": {
    "compile-proto": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "sh compile-proto.sh"
        ],
        "cwd": "libs/server/grpc/src/lib/proto",
        "parallel": false
      }
    },
    "compile-proto-watch": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nodemon -L -e '.proto' --exec sh compile-proto.sh"
        ],
        "cwd": "libs/server/grpc/src/lib/proto",
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/server/grpc/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/server/grpc"],
      "options": {
        "jestConfig": "libs/server/grpc/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["scope:server"]
}
